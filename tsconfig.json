{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__/*.ts"]
}
