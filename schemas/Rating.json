{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Rating",
  "properties": {
    "ratedDocId": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 1024
    },
    "body": {
      "type": "string",
      "title": "body",
      "maxLength": 1024
    },
    "title": {
      "type": "string",
      "title": "title",
      "maxLength": 300
    },
    "bestRating": {
      "type": "integer",
      "title": "bestRating"
    },
    "worstRating": {
      "type": "integer",
      "title": "worstRating"
    },
    "rating": {
      "type": "integer",
      "title": "rating"
    }
  }
}
