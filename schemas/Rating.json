{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Rating",
  "properties": {
    "ratedDocId": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 1024
    },
    "body": {
      "type": "string",
      "title": "body",
      "maxLength": 1024
    },
    "title": {
      "type": "string",
      "title": "title",
      "maxLength": 300
    },
    "bestRating": {
      "type": "integer",
      "title": "bestRating"
    },
    "worstRating": {
      "type": "integer",
      "title": "worstRating"
    },
    "rating": {
      "type": "integer",
      "title": "rating"
    },
    "creationDate": {
      "type": "string",
      "title": "creationDate",
      "format": "date-time",
      "maxLength": 25
    },
    "author": {
      "$ref": "#/definitions/DID"
    }
  },
  "required": ["ratedDocId", "author", "bestRating", "worstRating", "rating"],
  "definitions": {
    "DID": {
      "type": "string",
      "pattern": "^did:.+:.+",
      "maxLength": 1024
    },
    "DIDArray": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DID"
      },
      "maxLength": 1024
    }
  }
}
